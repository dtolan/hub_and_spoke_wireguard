{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist/backend",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "noEmit": false
  },
  "include": ["src/backend/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/components", "src/main.tsx"]
}
